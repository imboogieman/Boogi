<script type="text/x-handlebars-template" id="t-artist">
    <div id="artist" class="container">
        <div class="wrap">
            <div id="map" class="mobile-hidden"></div>

            <div id="artist-page-block" class="item shadow rounded" data-id="{{artist.id}}">
                <div class="image"><img src="{{artist.image}}" alt="{{artist.name}}" /></div>
                <div class="name">{{artist.name}}</div>
                <div class="description">{{artist.description}}</div>
                <div class="info">
                    <span class="gig-count">
                        <img src="/images/icon/i-gig.png" />
                        {{artist.gig_count}}
                    </span>
                    <span class="venue-count">
                        <img src="/images/icon/i-user.png" />
                        {{artist.promoter_count}}
                    </span>
                    <span class="{{#if artist.following}}following bg-orange{{else}}follow bg-blue{{/if}}">
                        <a href="{{artist.link}}#follow" data-id="{{artist.id}}" data-type="artist" class="follow-item">follow</a>
                    </span>
                </div>

                <div id="artist-calendar-container">
                    <div id="artist-calendar-block"></div>
                </div>

                <div class="clear"></div>

                <div class="notice">
                    Not all booked dates may be displayed on the Calendar.<br />
                    We work hard to provide you with updated information.<br />
                    Feel free to use our service, as you will be able to
                    change date in your booking offer before final confirmation.
                </div>
            </div>

            <div class="clear"></div>

            <a href="{{artist.link}}/book" id="book-artist" class="shadow">Book Now</a>

            <div class="clear"></div>
        </div>
    </div>
</script>

