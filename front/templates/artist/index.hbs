
<script type="text/x-handlebars-template" id="t-artist-list">
    <div id="artist-list" class="container">
        <div id="map" class="mobile-hidden"></div>

        <div id="items" class="shadow rounded">
            {{#artists}}
                <div class="item" data-id="{{id}}">
                    <div class="image"><img src="{{image}}" alt="{{name}}" /></div>
                    <div class="name">
                        <a href="{{link}}">{{name}}</a>
                    </div>
                    <div class="description">{{description}}</div>
                    <div class="info">
                        <span class="gig-count">
                            <img src="/images/icon/i-gig.png" />
                            {{gig_count}}
                        </span>
                        <span class="venue-count">
                            <img src="/images/icon/i-user.png" />
                            {{promoter_count}}
                        </span>
                        <span class="{{#if following}}following bg-orange{{else}}follow bg-blue{{/if}}">
                            <a href="{{link}}#follow" data-id="{{id}}" data-type="artist" class="follow-item">
                                {{#if following}}Unfollow{{else}}Follow{{/if}}
                            </a>
                        </span>
                    </div>
                </div>
            {{else}}
                <div class="empty">No records found</div>
            {{/artists}}

            {{#if artists}}
                <div class="clear"></div>

                <div id="load-more-artists">
                    <a href="#load-more" data-offset="30">Load more</a>
                </div>
            {{/if}}
        </div>

        <div class="clear"></div>
    </div>
</script>

