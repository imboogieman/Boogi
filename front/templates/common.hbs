<script type="text/x-handlebars-template" id="t-event-list">
    <div id="event-list">
        {{#if events}}
            <ul>
                {{#events}}
                    <li>
                        <div class="content">
                            <a href="{{init_link}}">{{init_name}}</a>
                            {{type_string}}
                            <a href="{{target_link}}">{{target_name}}</a>
                        </div>
                        <div class="notice">
                            {{datetime}}
                        </div>
                    </li>
                {{/events}}
            </ul>
        {{else}}
            <div class="notice">There are no new events</div>
        {{/if}}
    </div>
</script>

<script type="text/x-handlebars-template" id="t-statuses-partial">
    <div class="statuses">
        <ul>
            {{#available_statuses}}
                {{#ifCond id ../status}}
                    {{! Do not show current status }}
                {{else}}
                    {{#ifCond id ../../status_edit}}
                        {{#ifCond ../../../status ../../../status_rejected}}
                            {{#if ../../../../is_promoter}}
                                <li><a href="/{{../../../../../artist_alias}}/book/{{../../../../../book_date}}" class="book-again">Book again</a></li>
                            {{else}}
                                <li class="notice">Booking closed</li>
                            {{/if}}
                        {{else}}
                            <li><a href="#" class="edit-booking" data-id="{{../../../../id}}">Edit</a></li>
                        {{/ifCond}}
                    {{else}}
                        {{! Do not show Open status link }}
                        {{#if id}}
                            <li>
                                <a href="#" class="update-status status-{{id}} no-image"
                                   data-status="{{id}}"
                                   data-gig-id="{{../../../../gig_id}}"
                                   data-artist-id="{{../../../../artist_id}}">
                                    {{name}}
                                </a>
                            </li>
                        {{/if}}
                    {{/ifCond}}
                {{/ifCond}}
            {{else}}
                <li class="notice">Editing is not available for past gigs</li>
            {{/available_statuses}}
        </ul>
    </div>
</script>

<script type="text/x-handlebars-template" id="t-ac-item">
    <div class="ac-item">
        <div class="image">
            <a href="/{{link}}"><img src="{{image}}" /></a>
        </div>
        <div class="name"><a href="/{{link}}">{{name}}</a></div>
        <div class="description">{{description}}</div>
        <div class="clear"></div>
    </div>
</script>

