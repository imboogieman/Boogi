                    <img src="/images/logo-small.png" alt="Boogi" class="mobile-visible" />
                </a>
            </div>

            <ul id="menu-site">
                {{#if is_user}}
                    {{#ifCond user_role role_artist}}
                        <li id="menu-artist-bookings" class="link">
                            <a href="/artist/bookings">
                                <img src="/images/icon/i-booking.png" alt="Bookings" class="icon" />Bookings
                            </a>
                        </li>
                    {{/ifCond}}

                    {{#ifCond user_role role_promoter}}
                        <li id="menu-promoter-bookings" class="link">
                            <a href="/promoter/bookings">
                                <img src="/images/icon/i-booking.png" alt="Bookings" class="icon" />Bookings
                            </a>
                        </li>
                        <li id="menu-promoter-events" class="link">
                            <a href="/promoter/events">
                                <img src="/images/icon/i-event.png" alt="Events" class="icon" />Activity
                            </a>
                        </li>
                        <li id="menu-promoter-trackings" class="link">
                            <a href="/promoter/trackings">
                                <img src="/images/icon/i-favorite.png" alt="Trackings" class="icon" />Trackings
                            </a>
                        </li>
                    {{/ifCond}}

                    <li id="menu-updates">
                        <img src="/images/icon/i-update.png" alt="Updates" class="icon" />
                        {{#ifCond user_role role_artist}}
                            <div id="artist-booking-updates" class="booking-updates hidden"></div>
                        {{/ifCond}}

                        {{#ifCond user_role role_promoter}}
                            <div id="promoter-booking-updates" class="booking-updates hidden"></div>
                        {{/ifCond}}
                    </li>

                    <li id="menu-button">
                        <a id="show-user-menu" href="#">
