                <input type="text" id="toolbar-ac-input" name="toolbar-ac-input" value="" placeholder="Search artist..." />
                <input type="button" name="toolbar-ac-submit" value="" class="button search" />
            </div>

            <div class="clear"></div>
        </div>
    </div>
</script>

